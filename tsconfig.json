{
    "compilerOptions": {
        "outDir": "./dist/",
        "declaration": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "strict": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "dist"
    ]
}

